<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ro.ui.audio.AudioFragment">
    <Button
        android:id="@+id/btnHymnsUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizează imnurile"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
         />
    <Button
        android:id="@+id/btnAudioUpdate"
        android:layout_below="@id/btnHymnsUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descarcă toate audiourile"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/btnPdfUpdate"
        android:layout_below="@id/btnAudioUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descarcă PDF"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        />
</RelativeLayout>